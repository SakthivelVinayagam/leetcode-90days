{
    // Save files automatically after a short delay
    "files.autoSave": "afterDelay",
  
    // Keep Git in sync with remote changes
    "git.autofetch": true,
  
    // Automatically format Python code on save
    "editor.formatOnSave": true,
  
    // Use Python extension defaults
    "[python]": {
      "editor.defaultFormatter": "ms-python.python"
    },
  
    // Render Markdown preview side by side
    "[markdown]": {
      "editor.wordWrap": "on"
    }
  }